{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES5",
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "lib": ["ES2015", "DOM", "DOM.Iterable"]
  },
  "paths": {
    "@/*": ["./src/*"],
    "@/public/*": ["./public/*"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
